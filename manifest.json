{
  "manifest_version": 3,
  "name": "Block YouTube Shorts",
  "version": "1.2",
  "description": "Блокирует доступ к YouTube Shorts.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "YouTube Shorts Blocker"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block_shorts",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
